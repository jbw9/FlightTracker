# Flight Tracker Environment Variables

# OpenSky Network API Configuration
# OpenSky Network is free but has rate limits
# No API key required for basic usage
VITE_OPENSKY_API_BASE_URL=https://opensky-network.org/api

# Optional: If you get an OpenSky Network account for higher rate limits
# VITE_OPENSKY_USERNAME=your_username
# VITE_OPENSKY_PASSWORD=your_password

# AviationStack API Configuration for flight schedule lookup
# Get free API key at: https://aviationstack.com/ (1,000 requests/month free)
# Required for automatic flight lookup by flight number
VITE_AVIATIONSTACK_API_KEY=your_api_key_here

# Flight Tracking Configuration
VITE_FLIGHT_UPDATE_INTERVAL_HIGH=30000
VITE_FLIGHT_UPDATE_INTERVAL_MEDIUM=60000
VITE_FLIGHT_UPDATE_INTERVAL_LOW=300000

# Feature Flags
VITE_ENABLE_REAL_TIME_TRACKING=true
VITE_ENABLE_FALLBACK_ESTIMATION=true
VITE_ENABLE_DEBUG_LOGGING=false

# Map Configuration
VITE_MAP_UPDATE_INTERVAL=1000
VITE_MAP_ANIMATION_DURATION=2000